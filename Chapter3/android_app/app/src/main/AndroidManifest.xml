<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlmobileapps.styletransfer">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mlmobileapps.styletransfer.ShowImageActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.mlmobileapps.styletransfer.CameraActivity"/>
        <activity
            android:name="com.mlmobileapps.styletransfer.GalleryActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.mlmobileapps.styletransfer.CameraActivity"/>
        <activity android:name="com.mlmobileapps.styletransfer.CameraActivity"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>